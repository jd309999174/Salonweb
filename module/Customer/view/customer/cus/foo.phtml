<link href="/css/fileinput.min.css" media="screen" rel="stylesheet" type="text/css">

<script src="/js/fileinput.min.js"></script>
<script src="/js/fileinput.zh.js"></script>

<form enctype="multipart/form-data">
        <div class="file-loading">
            <input id="uploadfile" name="input-b3[]" type="file"  multiple 
    data-show-upload="false" data-show-caption="true" data-msg-placeholder="选择 {files} ">
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-default">Reset</button>
</form>

<script>
$(document).on('ready', function() {
    $("#uploadfile").fileinput({
    	language: 'zh', //设置语言
        showUpload: false,
        maxFileCount: 10,
        mainClass: "input-group-normal"
    });
});
</script>
